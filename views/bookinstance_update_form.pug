extends layout

block content
  h1 #{title}: 
    #{bookinstance._id}

  form(method='POST' action='')
    div.form-group
      label(for='title') Book:
      input#title.form-control(type='text'
      value=bookinstance.book.title)

    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(type='text'
      value=bookinstance.imprint)

    div.form-group
      label(for='due_back') Date when book available:
      input#due_back.form-control(type='date' name='due_back_update_form'
      value=bookinstance.due_back_update_form)

    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select' 
      placeholder=bookinstance.status 
      name='status' required='true')
        option(value='Maintenance') Maintenance
        option(value='Available') Available
        option(value='Loaned') Loaned
        option(value='Reserved') Reserved

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg